<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <%-include('partials/header') %>
  <div class="container p-1 w-100 mt-5 border rounded bg-light justify-content-center align-items-center">
    <h2>Liste de Fovaries</h2>
    <% if (user==null) { %>
    <h2>Connectez-vous pour voir votre liste de favoris</h2>
    <% } 
     else { %>
    <div class="d-flex m-3">
      <% films.forEach(f => { %>
      <% let link=`admin/favori/delete/${f.id}` %>
      <div class="card m-3  " style="width: 18rem; ">
        <img src="/assets/<%= `${f.image}` %> " class="card-img-top" alt="...">
        <div class="card-body ">
          <h5 class="card-title"> <%= `${f.genre}`  %> </h5>
          <h5 class="card-title"> <%= `${f.titre}`  %> </h5>
          <h5 class="card-title"> <%= new Date(f.date_sortie).toLocaleDateString() %> </h5>
          <p class="card-text"><%= `${f.description}`  %> </p>
          <a href="<%= link %>" class="btn btn-primary">Supprimer</a>
        </div>
      </div>
      <%})%>
    </div>
    <%}%>
    </div>
    
</body>
</html>