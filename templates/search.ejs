<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Xpress-Movie</title>
</head>

<body>
  <%-include('partials/header') %>
  <div class="container p-4 w-100 mt-5 border rounded bg-light justify-content-center align-items-center">
  <div class="row m-3">
      <% films.forEach(f => { %>
      <% let link=`admin/favori/${f.id}` %>
       <div class="col-md-3 mb-4">
      <div class="card h-100" style="width: 18rem; ">
        <img src="/assets/<%= `${f.image}` %> " class="card-img-top" alt="film"  height= "200px">
        <div class="card-body ">
          <h5 class="card-title"> <%= `${f.genre}`  %> </h5>
          <h5 class="card-title"> <%= `${f.titre}`  %> </h5>
          <h5 class="card-title"> <%= new Date(f.date_sortie).toLocaleDateString() %> </h5>
          <p class="card-text"><%= `${f.description}`  %> </p>
          <a href="<%= link %>" class="btn btn-primary">Ajouter Ã  Favorie</a>
        </div>
      </div>
       </div>
      <%})%>
    </div>
  </div>
<footer>
    <%-include('partials/footer', {year: 2025}) %>
  </footer>
</body>

</html>