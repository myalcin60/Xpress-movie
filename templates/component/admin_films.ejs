<div class="container p-4 w-100 mt-5 border rounded bg-dark p-4 text-light justify-content-center align-items-center">
        <h3> Enregister un film</h3>

        <form class="d-flex gab-3 " action="" method="post">
          <div class="m-3">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" name="genre">
          </div>
          <div class="m-3 ">
            <label for="titre" class="form-label">Titre</label>
            <input type="text" class="form-control" id="titre" name="titre">
          </div>
          <div class="m-3 ">
            <label for="description" class="form-label">Description </label>
            <input type="text" class="form-control" id="description" name="description">
          </div>
          <div class="m-3">
            <label for="date" class="form-label">Date de Sortie</label>
            <input type="date" class="form-control" id="date" name="date">
          </div>
          <div class="m-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" class="form-control" id="image" name="image">
          </div>
          <div class="m-3 mt-5">
            <button type="submit" class="btn btn-primary w-100">Enregistrer</button>
          </div>
        </form>
      </div>
      <!-- admin film list -->
      <div class="container p-1 w-100 mt-5 border rounded p-4 bg-dark justify-content-center align-items-center">

        <h3>Liste de films</h3>

        <table class='table table-striped table-hover align-middle'>
          <thead class='table-primary'>
            <tr>
              <th>Genre</th>
              <th>Titre</th>
              <th>Description</th>
              <th>Date Sortie</th>
              <th>Image</th>
              <th class='text-end'>Suprimer</th>
              <th class='text-end'>Modifier</th>
            </tr>
          </thead>

          <tbody>
            <% adminFilms.forEach(f=> { %>
              <tr>
                <td class="w-25">
                  <input type="text" class="form-control" id="genre" name="genre" value="<%= f.genre %>"
                    form="form-<%= f.id %>">
                </td>
                <td class="w-25">
                  <input type="text" class="form-control" id="titre" name="titre" value="<%= f.titre %>"
                    form="form-<%= f.id %>">
                </td>
                <td class="w-25">
                  <input type="text" class="form-control" id="description" name="description"
                    value="<%= f.description %>" form="form-<%= f.id %>">
                </td>
                <td class="w-25">
                  <input type="date" class="form-control" id="date_sortie" name="date_sortie"
                    value="<%= f.date_sortie ? new Date(f.date_sortie).toISOString().split('T')[0] : '' %>"
                    form="form-<%= f.id %>">
                </td>
                <td class="w-25">
                  <input type="hidden" class="form-control" id="image" name="image" value="<%= f.image %>"
                    form="form-<%= f.id %>">
                  <img src="/public/assets/<%= f.image %>" class="card-img-top"
                    style="width: 50px; height: 50px; border-radius: 2px;" alt="...">
                </td>
                <td class='text-end w-25'>
                  <form id="form-<%= f.id %>" action="/admin/update/film/<%= f.id %>" method="post">
                    <button type="submit" class="btn btn-success">Modifier</button>
                  </form>
                </td>
                <td class='text-end w-25'>
                  <form id="form-<%= f.id %>" action="/admin/delete/film/<%= f.id %>" method="get">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                  </form>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
          <div>
          </div>
      </div>