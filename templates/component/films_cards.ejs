<div class="container p-1 w-100 mt-5 text-light border rounded bg-dark justify-content-center align-items-center">
  <h3>Liste de films</h3>
  <div class="row m-3 ">
    <% films.forEach(f=> { %>
      <% let link=`/admin/favori/${f.id}` %>
        <div class=" col-12 col-sm-6 col-md-3 mb-4 ">
          <div class="card h-100 ">
            <img src="/public/assets/<%= `${f.image}` %> " class="card-img-top" alt="film" height="200px">
            <div class="card-body">
              <h5 class="card-title fs-5 fs-md-4 fs-lg-3">
                <%= `${f.genre}` %>
              </h5>
             <h5 class="card-title  fs-5 fs-md-4 fs-lg-3">
                <%= `${f.titre}` %>
              </h5>
               <h5 class="card-title card-title fs-5 fs-md-4 fs-lg-3">
                <%= new Date(f.date_sortie).toLocaleDateString() %>
              </h5>
              <p class="card-text fs-5 fs-md-4 fs-lg-3">
                <%= `${f.description}` %>
              </p>
              <a href="<%= link %>" class="btn btn-primary">Ajouter Ã  Favorie</a>
            </div>
          </div>
        </div>
        <%})%>
  </div>
</div>