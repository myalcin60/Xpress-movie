
      <div class="container mt-5 card shadow-sm p-4 bg-dark text-light border rounded" >
        <h2 class="mb-4 ">Information de compte</h2>
        <!-- User Info Form -->
        <form action="/admin/update/user/<%= user.id %>" method="post">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="nom" class="form-label">Nom</label>
              <input type="text" class="form-control" id="nom" name="nom" value="<%= user.nom %>">
            </div>
            <div class="col-md-6">
              <label for="prenom" class="form-label">Prenom</label>
              <input type="text" class="form-control" id="prenom" name="prenom" value="<%= user.prenom %>">
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
            </div>
            <div class="col-md-6">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role">
                <option value="admin" <%=user.role==="admin" ? "selected" : "" %>>Admin</option>
                <option value="abonne" <%=user.role==="abonne" ? "selected" : "" %>>Abonne</option>
              </select>
            </div>
          </div>
          <div class="d-flex mt-4 gap-3">
            <button type="submit" class="btn btn-success flex-fill">Modifier</button>
          </div>
        </form>

        <!-- Password Change -->
        <form action="/admin/update/password/<%= user.id %>" method="post" class="mt-4">
          <div class="col-md-6">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password"
              placeholder="Nouveau mot de passe">
            <button type="submit" class="btn btn-warning mt-3">Changer</button>
          </div>
        </form>

        <!-- Delete Account -->
        <div class="mt-5 p-3 border rounded bg-dark text-light d-flex align-items-center justify-content-between">
          <h5 class="text-danger mb-0">Supprimer votre compte</h5>
          <% let link=`/admin/delete_user/${user.id}` %>
            <a href="<%= link %>" class="btn btn-danger">Supprimer</a>
        </div>
      </div>
