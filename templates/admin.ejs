<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
</head>

<body>
  <%-include('partials/header') %>
  <% if (user.role=='admin') { %>
  <div class="container p-4 w-100 mt-5 border rounded bg-light justify-content-center align-items-center">
    <h2> Enregister un film</h2>

    <form class="d-flex gab-3 " action="" method="post">
      <div class="m-3">
        <label for="genre" class="form-label">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre">
      </div>
      <div class="m-3 ">
        <label for="titre" class="form-label">Titre</label>
        <input type="text" class="form-control" id="titre" name="titre">
      </div>
      <div class="m-3 ">
        <label for="description" class="form-label">Description </label>
        <input type="text" class="form-control" id="description" name="description">
      </div>
      <div class="m-3">
        <label for="date" class="form-label">Date de Sortie</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <div class="m-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" class="form-control" id="image" name="image">
      </div>
      <div class="m-3 mt-5">
        <button type="submit" class="btn btn-primary w-100">Enregistrer</button>
      </div>
    </form>
  </div>
  <div class="container p-1 w-100 mt-5 border rounded bg-light justify-content-center align-items-center">
    <h3>Liste de films</h3>

    <table class='table table-striped table-hover align-middle'>
      <thead class='table-primary'>
        <tr>
          <th>Genre</th>
          <th>Titre</th>
          <th>Description</th>
          <th>Date Sortie</th>
          <th>Image</th>
          <th class='text-end'>Delete</th>
          <th class='text-end'>Update</th>
        </tr>
      </thead>

      <tbody>
        <% films.forEach(f => { %>
        <tr>
          <td class="w-25">
            <input type="text" class="form-control" id="genre" name="genre" value="<%= f.genre %>" form="form-<%= f.id %>">
          </td>
          <td class="w-25">
            <input type="text" class="form-control" id="titre" name="titre" value="<%= f.titre %>" form="form-<%= f.id %>">
          </td>
          <td class="w-25">
            <input type="text" class="form-control" id="description" name="description" value="<%= f.description %>" form="form-<%= f.id %>">
          </td>
          <td class="w-25">
            <input type="date" class="form-control" id="date_sortie" name="date_sortie" value="<%= f.date_sortie ? new Date(f.date_sortie).toISOString().split('T')[0] : '' %>" form="form-<%= f.id %>">
          </td>
          <td class="w-25">
            <input type="hidden" class="form-control" id="image" name="image" value="<%= f.image %>" form="form-<%= f.id %>">
            <img src="/assets/<%= f.image %>" class="card-img-top" style="width: 50px; height: 50px; border-radius: 2px;" alt="...">
          </td>
          <td class='text-end w-25'>
            <form id="form-<%= f.id %>" action="/admin/update/<%= f.id %>" method="post">
              <button type="submit" class="btn btn-primary">Modifier</button>
            </form>
          </td>
          <td class='text-end w-25'>
            <form id="form-<%= f.id %>" action="/admin/delete/<%= f.id %>" method="get">
              <button type="submit" class="btn btn-primary">Supprimer</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
      <div>
      </div>
  </div>
  <% } else { %>
  <div class="container p-1 w-100 mt-5 border rounded bg-light justify-content-center align-items-center">
    <h3>Liste de films</h3>
    <div class="d-flex m-3">
      <% films.forEach(f => { %>
      <% let link=`/favori/` %>
      <div class="card m-3  " style="width: 18rem; ">
        <img src="/assets/<%= `${f.image}` %> " class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"> <%= `${f.genre}`  %> </h5>
          <h5 class="card-title"> <%= `${f.titre}`  %> </h5>
          <h5 class="card-title"> <%= new Date(f.date_sortie).toLocaleDateString() %> </h5>
          <p class="card-text"><%= `${f.description}`  %> </p>
          <a href="<%= link %>" class="btn btn-primary">Ajouter Ã  Favorie</a>
        </div>
      </div>
      <%})%>
    </div>
  </div>
  <% } %>


</body>

</html>